@article{de_assis_game_2017,
	title = {A {Game} {Theoretical} {Based} {System} {Using} {Holt}-{Winters} and {Genetic} {Algorithm} {With} {Fuzzy} {Logic} for {DoS}/{DDoS} {Mitigation} on {SDN} {Networks}},
