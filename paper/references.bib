	urldate = {2024-11-09},
	journal = {IEEE Transactions on Dependable and Secure Computing},
	author = {Cao, Yongyi and Jiang, Hao and Deng, Yuchuan and Wu, Jing and Zhou, Pan and Luo, Wei},
